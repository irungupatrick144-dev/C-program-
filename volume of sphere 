description:program to calculate volume of a sphere
*/
#include<stdio.h>
int main(){
	#define π 22/7
	float radius, volume;
	//prompt the user to enter the  radius 
	printf("enter the radius of the sphere\n");
	scanf("%1f",&radius);
	volume=4/3*π*radius*radius*radius;
	printf("The volume of the sphere:.%1f\n" ,volume);
	scanf("%1f",& volume);
	return 0;
}
	
